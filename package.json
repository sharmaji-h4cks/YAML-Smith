{
  "name": "yamlsmith",
  "version": "1.0.0",
  "description": "YAML Smith - Cloud-Native DevOps automation platform for generating Kubernetes manifests, Dockerfiles, Helm charts, and CI/CD pipelines",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build"
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "manifest",
    "yaml",
    "generator",
    "devops",
    "cloud-native",
    "cncf"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
